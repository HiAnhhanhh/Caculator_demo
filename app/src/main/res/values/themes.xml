<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Caculator_demo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="calculator_btn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:inset">0dp</item>
        <item name="backgroundTint">@color/button_bg</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>
    
    <style name="Action_gray_btn" parent="calculator_btn">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/background_btn_all_clear</item>
    </style>

    <style name="Action_orange_btn" parent="calculator_btn">
        <item name="backgroundTint">#f6972a</item>
    </style>
</resources>